##
## Build
##

FROM golang:1.16-buster AS build

WORKDIR /app

COPY ../go.mod ./
COPY ../go.sum ./
RUN go mod download

COPY ../cmd ./
COPY ../internal ./

RUN go build -o /gerencia ./cmd/gerencia

##
## Deploy
##

FROM gcr.io/distroless/base-debian10

WORKDIR /

COPY --from=build /gerencia /gerencia

USER nonroot:nonroot

ENTRYPOINT ["/gerencia"]