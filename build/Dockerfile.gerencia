## Build
# Ver qual a melhor imagem
FROM golang:1.16-buster AS build

#RUN apk add --no-cache ca-certificates git <--- precisa disso?
# ENV GO111MODULE=on <--- precisa disso?


WORKDIR /app

COPY ./go.mod go.sum ./
RUN go mod download

COPY ./cmd ./
COPY ./internal ./

RUN go build -o ./build/gerencia ./cmd/gerencia

## Deploy
FROM gcr.io/distroless/base-debian10

WORKDIR /

COPY --from=build /gerencia /gerencia

USER nonroot:nonroot

ENTRYPOINT ["/gerencia"]